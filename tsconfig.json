{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@dequanto/*": [ "src/*" ],
            "@dequanto-contracts/*": [ "contracts/*" ]
        },
        "typeRoots": [
            "node_modules/@types",
            "typings",
            "typings/globals"
        ],
        "types": ["node", "assertion", "atma-utest"],
        "declaration": true,

        "module": "CommonJS",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "target": "es2022",
        "lib": ["dom", "es2022"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "transformers": {
        "before": ["ts-nameof"]
    }
}
