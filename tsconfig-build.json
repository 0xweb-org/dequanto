{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@dequanto/*": [ "src/*" ],
            "@dequanto-contracts/*": [ "contracts/*" ]
        },
        "outDir": "./dist",
        "module": "AMD",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "target": "es2020",
        "lib": ["dom", "es2018"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "transformers": {
        "before": ["ts-nameof"]
    },
    "exclude": [
        "node_modules",
        "db"
    ]
}
