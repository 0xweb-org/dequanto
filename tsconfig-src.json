{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@dequanto/*": [ "src/*" ],
            "@dequanto-contracts/*": [ "contracts/*" ]
        },
        "typeRoots": [
            "node_modules/@types",
            "typings/globals"
        ],
        "types": ["node", "assertion", "atma-utest"],

        "outDir": "dist",
        "module": "CommonJS",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "target": "es2020",
        "lib": ["dom", "es2018"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "transformers": {
        "before": ["ts-nameof"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "db",
        "test",
        "**/*.spec.ts",
        "src/gen/ContractTemplate.ts"
    ]
}
