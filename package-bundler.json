{
    "apps": {
        "cjs": {
            "file": "**.ts",
            "//file": "blocks/**.ts",
            "ignore": [
                "bridges/.+",
                "config/dequanto.d.ts",
                "tokens/TokenSwapService.ts",
                "tokens/defi/paraswap",
                "exp.ts",
                ".spec.ts$"
            ],
            "combine": [
                "prebuilt/openzeppelin/**.ts"
            ],
            "base": "/src/",
            "outputBase": "/lib/cjs",
            "outputExtension": "js",
            "outputSources": "",
            "js": [],
            "extensions": {
                "yml": {
                    "type": "js"
                }
            },
            "settings": {
                "atma-io-middleware-condcomments": {
                    "defines": {
                        "CJS": true,
                        "ESM": false
                    }
                },
                "atma-loader-ts": {
                    "sourceMap": true,
                    "typescript": {
                        "compilerOptions": {
                            "paths": {
                                "@dequanto/*": [
                                    "src/*"
                                ],
                                "@dequanto-contracts/*": [
                                    "src/prebuilt/*"
                                ]
                            },
                            "module": "CommonJS",
                            "experimentalDecorators": true,
                            "target": "es2021",
                            "lib": [
                                "dom",
                                "es2021"
                            ],
                            "esModuleInterop": true,
                            "allowSyntheticDefaultImports": true
                        }
                    }
                }
            }
        },
        "esm": {
            "file": "**.ts",
            "//file": "blocks/**.ts",
            "ignore": [
                "bridges/.+",
                "config/dequanto.d.ts",
                "tokens/TokenSwapService.ts",
                "tokens/defi/paraswap",
                "exp.ts",
                ".spec.ts$"
            ],
            "combine": [
                "prebuilt/openzeppelin/**.ts"
            ],
            "base": "/src/",
            "outputBase": "/lib/esm",
            "outputExtension": "mjs",
            "outputSources": "",
            "js": [],
            "extensions": {
                "yml": {
                    "type": "js"
                }
            },
            "settings": {
                "atma-io-middleware-condcomments": {
                    "defines": {
                        "CJS": false,
                        "ESM": true
                    }
                },
                "atma-loader-ts": {
                    "sourceMap": true,
                    "typescript": {
                        "compilerOptions": {
                            "paths": {
                                "@dequanto/*": [
                                    "src/*"
                                ],
                                "@dequanto-contracts/*": [
                                    "src/prebuilt/*"
                                ]
                            },
                            "module": "ES2022",
                            "experimentalDecorators": true,
                            "target": "es2021",
                            "lib": [
                                "dom",
                                "es2021"
                            ],
                            "esModuleInterop": true,
                            "allowSyntheticDefaultImports": true
                        }
                    }
                }
            }
        }
    },
    "common": {
        "defaultExtensions": {
            "js": "ts"
        },
        "options": {
            "include": {
                "amd": true,
                "extensionDefault": {
                    "js": "ts"
                },
                "routes": {
                    "@dequanto/*": [
                        "src/*"
                    ],
                    "@dequanto-contracts/*": [
                        "src/prebuilt/*"
                    ]
                },
                "map": {}
            }
        },
        "dynamicDependencies": [
            "^readline$",
            "^https?$",
            "a-di",
            "atma-io",
            "atma-server",
            "atma-logger",
            "atma-utils",
            "class-json",
            "atma-formatter",
            "appcfg",
            "alot",
            "memd",
            "^@everlog",
            "^@noble",
            "^@scure",
            "^debug$",
            "^hardhat$",
            "^child_process$",
            "^crypto$",
            "^fs$",
            "^os$",
            "^path$",
            "^assert$",
            "^stream$",
            "^ws$",
            "^@solidity-parser",
            "^signal-exit$",
            "^papaparse$"
        ],
        "middlewares": {
            "jss": [
                "atma-io-middleware-uglify:write"
            ],
            "ts": [
                "atma-io-middleware-condcomments:read",
                "atma-io-middleware-importer:read",
                "atma-loader-ts:read"
            ],
            "yml": [
                "atma-io-middleware-yml:read"
            ]
        }
    }
}
